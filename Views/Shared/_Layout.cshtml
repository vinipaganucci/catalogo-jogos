<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body.dark-mode {
            background-color: #1a1a1a;
            color: #f0f0f0;
        }

            body.dark-mode .card,
            body.dark-mode .list-group-item,
            body.dark-mode .modal-content {
                background-color: #2c2c2c;
                color: #f0f0f0;
                border-color: #444;
            }

            body.dark-mode .table {
                color: #f0f0f0;
                border-color: #444;
            }

            body.dark-mode .table-light {
                color: #f0f0f0 !important;
                background-color: #333 !important;
                border-color: #444 !important;
            }

            body.dark-mode .table-striped > tbody > tr:nth-of-type(odd) > * {
                background-color: #2c2c2c;
                color: #f0f0f0;
            }

            body.dark-mode .table-striped > tbody > tr:nth-of-type(even) > * {
                background-color: #222;
                color: #f0f0f0;
            }

            body.dark-mode .card-header,
            body.dark-mode .modal-footer {
                border-bottom-color: #444;
                border-top-color: #444;
            }

            body.dark-mode .form-control,
            body.dark-mode .form-select {
                background-color: #333;
                color: #f0f0f0;
                border-color: #555;
            }

                body.dark-mode .form-control::placeholder {
                    color: #999;
                }

            body.dark-mode .btn-light,
            body.dark-mode .btn-outline-secondary {
                background-color: #444;
                color: #f0f0f0;
                border-color: #555;
            }

            body.dark-mode .info-card {
                background-color: #222 !important;
            }

            body.dark-mode .alert-secondary,
            body.dark-mode .alert-warning {
                background-color: #333;
                border-color: #444;
                color: #ccc;
            }

            /* Cabeçalho da tabela no modo escuro */
            body.dark-mode table thead th {
                background-color: #222 !important;
                color: #fff !important;
                border-color: #444 !important;
            }

            /* Linhas da tabela no modo escuro (opcional pra padronizar) */
            body.dark-mode table tbody td {
                background-color: #1a1a1a !important;
                color: #e0e0e0 !important;
                border-color: #333 !important;
            }

        .footer {
            font-size: 0.8rem;
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

        body.dark-mode .footer {
            border-top-color: #333 !important;
            color: #888 !important;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Jogos" asp-action="Index">Catálogo de Jogos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>

                    <div class="d-flex">
                        <button class="btn btn-outline-dark" id="darkModeToggle">Mudar Tema</button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-3 flex-grow-1">
        @RenderBody()
    </main>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function() {
            var toggleButton = document.getElementById('darkModeToggle');
            var body = document.body;
            var navBar = document.querySelector('.navbar');
            var themeKey = 'theme';
            var lightTheme = 'light';
            var darkTheme = 'dark';

            function applyTheme(theme) {
                if (theme === darkTheme) {
                    body.classList.add('dark-mode');
                    toggleButton.textContent = 'Modo Claro';
                    toggleButton.classList.remove('btn-outline-dark');
                    toggleButton.classList.add('btn-outline-light');
                    navBar.classList.remove('navbar-light', 'bg-white');
                    navBar.classList.add('navbar-dark', 'bg-dark');

                } else {
                    body.classList.remove('dark-mode');
                    toggleButton.textContent = 'Modo Escuro';
                    toggleButton.classList.remove('btn-outline-light');
                    toggleButton.classList.add('btn-outline-dark');
                    navBar.classList.remove('navbar-dark', 'bg-dark');
                    navBar.classList.add('navbar-light', 'bg-white');
                }
            }

            var savedTheme = localStorage.getItem(themeKey);

            if (savedTheme) {
                applyTheme(savedTheme);
            } else {
                applyTheme(lightTheme);
            }

            toggleButton.addEventListener('click', function() {
                var newTheme = body.classList.contains('dark-mode') ? lightTheme : darkTheme;
                localStorage.setItem(themeKey, newTheme);
                applyTheme(newTheme);
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>