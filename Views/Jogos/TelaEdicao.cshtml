@model catalogo_jogos.Models.Jogo
@{
    ViewData["Title"] = "Editar Jogo";
    int currentYear = DateTime.Now.Year;

    // LÊ OS FILTROS QUE A 'LISTAJOGOS' ENVIOU PELA URL
    var termoBusca = Context.Request.Query["termoBusca"];
    var sortOrder = Context.Request.Query["sortOrder"];
    var filtroAno = Context.Request.Query["filtroAno"];
    var filtroNaoZerados = Context.Request.Query["filtroNaoZerados"];
}

<div class="container mt-5" style="max-width: 500px;">
    <h3 class="mb-4 text-center">@ViewData["Title"]</h3>

    <form asp-action="AtualizarObjetoJogo"
          asp-route-termoBusca="@termoBusca"
          asp-route-sortOrder="@sortOrder"
          asp-route-filtroAno="@filtroAno"
          asp-route-filtroNaoZerados="@filtroNaoZerados"
          method="post">

        <input type="hidden" asp-for="Id" />

        <div class="mb-3 row">
            <label class="col-sm-5 col-form-label" asp-for="Name">Título:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" placeholder="Ex: Resident Evil" asp-for="Name" />
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-5 col-form-label" asp-for="Year">Ano Que Foi Jogado:</label>
            <div class="col-sm-7">
                <select asp-for="Year" id="selectYear" class="form-select">
                    @for (int year = currentYear + 1; year >= 2010; year--)
                    {
                        <option value="@year">@year</option>
                    }
                </select>
            </div>
        </div>
        <div class="mb-4 row">
            <label class="col-sm-5 col-form-label" asp-for="Grade">Nota:</label>
            <div class="col-sm-7">
                <select class="form-select" asp-for="Grade">
                    <option selected disabled value="">Selecione uma nota</option>
                    <option value="Obra-Prima">Obra-Prima</option>
                    <option value="Excelente">Excelente</option>
                    <option value="Muito Bom">Muito Bom</option>
                    <option value="Bom">Bom</option>
                    <option value="Mediano">Mediano</option>
                    <option value="Ruim">Ruim</option>
                    <option value="Péssimo">Péssimo</option>
                    <option value="Lixo Podre">Lixo Podre</option>
                </select>
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-5 col-form-label" asp-for="Ordem">Ordem (Manual):</label>
            <div class="col-sm-7">
                <input type="number" class="form-control" asp-for="Ordem" />
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-5 col-form-label" asp-for="CoverUrl">URL da Capa:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" asp-for="CoverUrl" placeholder="http://..." />
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-5 col-form-label" asp-for="DlcUrl1">URL Foto DLC 1:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" asp-for="DlcUrl1" placeholder="http://..." />
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-5 col-form-label" asp-for="DlcUrl2">URL Foto DLC 2:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" asp-for="DlcUrl2" placeholder="http://..." />
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-5 col-form-label" asp-for="DlcUrl3">URL Foto DLC 3:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" asp-for="DlcUrl3" placeholder="http://..." />
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-5 col-form-label" asp-for="DlcUrl4">URL Foto DLC 4:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" asp-for="DlcUrl4" placeholder="http://..." />
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-5 col-form-label" asp-for="YoutubeUrl">URL do YouTube:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" asp-for="YoutubeUrl" placeholder="https://www.youtube.com/watch?v=..." />
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-5 col-form-label text-sm-end" asp-for="FinishedInThisYear">Zerado Nesse Ano?:</label>
            <div class="col-sm-7">
                <div class="form-check pt-2">
                    <input asp-for="FinishedInThisYear" type="checkbox" class="form-check-input" value="true" id="finishedCheckbox" />
                </div>
            </div>
        </div>
        <div class="mb-3 row" id="lastFinishedContainer" style="display: none;">
            <label class="col-sm-5 col-form-label text-sm-end" asp-for="IsLastFinished">Este foi o último que zerei?</label>
            <div class="col-sm-7">
                <div class="form-check pt-2">
                    <input asp-for="IsLastFinished" type="checkbox" class="form-check-input" value="true" id="lastFinishedCheckbox" />
                </div>
            </div>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            <a asp-action="Detalhar"
               asp-route-id="@Model.Id"
               asp-route-termoBusca="@termoBusca"
               asp-route-sortOrder="@sortOrder"
               asp-route-filtroAno="@filtroAno"
               asp-route-filtroNaoZerados="@filtroNaoZerados"
               class="btn btn-secondary">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ... (todo o seu JS dos checkboxes continua aqui, sem mudança) ...
            var yearSelect = document.getElementById('selectYear');
            var lastFinishedContainer = document.getElementById('lastFinishedContainer');
            var currentYear = @currentYear;

            var finishedCheck = document.getElementById('finishedCheckbox');
            var lastFinishedCheck = document.getElementById('lastFinishedCheckbox');

            function toggleLastFinishedCheckbox() {
                if (parseInt(yearSelect.value) === currentYear) {
                    lastFinishedContainer.style.display = 'flex';
                } else {
                    lastFinishedContainer.style.display = 'none';
                }
            }
            toggleLastFinishedCheckbox();
            yearSelect.addEventListener('change', toggleLastFinishedCheckbox);

            lastFinishedCheck.addEventListener('change', function() {
                if (lastFinishedCheck.checked) {
                    finishedCheck.checked = true;
                }
            });

            finishedCheck.addEventListener('change', function() {
                if (!finishedCheck.checked) {
                    lastFinishedCheck.checked = false;
                }
            });
        });
    </script>
}