@model catalogo_jogos.Models.EstatisticasViewModel
@{
    ViewData["Title"] = "Estatísticas";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1 class="text-center">Estatísticas</h1>
        <br />

        <div class="card mb-3">
            <div class="card-header">
                Último Jogo Zerado
            </div>
            <div class="card-body">
                <h4 class="card-title">@Model.LastGameFinished</h4>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                Jogos Zerados Mais Vezes
            </div>
            <div class="card-body">
                @foreach (var game in Model.MostFinishedGame)
                {
                    <h4 class="card-title">@game</h4>
                }
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                Jogos Que Foram Jogados Mais Vezes (Zerado ou Não)
            </div>
            <div class="card-body">
                @foreach (var game in Model.MostPlayedGame)
                {
                    <h4 class="card-title">@game</h4>
                }
            </div>
        </div>

        <div class="mt-4">
            <a asp-controller="Jogos" asp-action="ListaJogos" class="btn btn-secondary">Voltar para a Lista</a>
        </div>
    </div>
</div>